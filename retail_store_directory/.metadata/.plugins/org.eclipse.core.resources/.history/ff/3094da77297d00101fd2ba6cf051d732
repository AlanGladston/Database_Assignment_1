	@Override
	public  Response<List<Product>> sortProducts(Comparator<Product> comparator) throws ProductServiceException {
		try {
	        List<Product> products = productDAO.findAll(); // fetch all products
	        products.sort(comparator);                     // sort using Comparator
	        return new Response<>(200, products);          // wrap result in Response
	    } catch(Exception e) {
	        return new Response<>(500, "Failed to sort products: " + e.getMessage(), null);
	    }
	}

}
